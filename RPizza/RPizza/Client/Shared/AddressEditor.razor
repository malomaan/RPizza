@inject IJSRuntime IJSRuntime

<div class="form-field">
    <label>Nombre:</label>
    <div>
        <InputText @bind-Value="Address.Name" id="Name"></InputText>
        <ValidationMessage For="()=> Address.Name" />
    </div>
</div>
<div class="form-field">
    <label>Linea 1:</label>
    <div>
        <InputText @bind-Value="Address.Line1"></InputText>
        <ValidationMessage For="()=> Address.Line1" />
    </div>
</div>
<div class="form-field">
    <label>Linea 2:</label>
    <div>
        <InputText @bind-Value="Address.Line2"></InputText>
    </div>
</div>
<div class="form-field">
    <label>Ciudad:</label>
    <div>
        <InputText @bind-Value="Address.City"></InputText>
        <ValidationMessage For="()=> Address.City" />
    </div>
</div>
<div class="form-field">
    <label>Departamento:</label>
    <div>
        <InputText @bind-Value="Address.Region"></InputText>
        <ValidationMessage For="()=> Address.Region" />
    </div>
</div>
<div class="form-field">
    <label>Codigo Postal:</label>
    <div>
        <InputText @bind-Value="Address.PostalCode"></InputText>
        <ValidationMessage For="()=> Address.PostalCode" />
    </div>
</div>

@code {
    [Parameter]
    public Address Address { get; set; }

    [Parameter]
    public EventCallback Foco { get; set; }


}
